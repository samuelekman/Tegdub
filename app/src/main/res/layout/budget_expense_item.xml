<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/budgetExpenseItemTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/listItemImgView"
        tools:text="ListItem"
        android:paddingBottom="3dp"/>

    <ImageView
        android:id="@+id/budgetExpenseItemImgView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/budgetItemTxtView"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/budgetItemTxtView"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        app:srcCompat="@drawable/ic_attach_money_black_24dp" />
</RelativeLayout>